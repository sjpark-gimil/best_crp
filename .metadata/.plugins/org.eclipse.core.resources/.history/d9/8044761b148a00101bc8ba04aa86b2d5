/* ==== main.c : UART2 echo at 9600 baud for BLE transparent test ==== */
#include "main.h"
#include "gpio.h"
#include "usart.h"
#include <string.h>
#include <stdint.h>

/* Cube prototypes (generated elsewhere) */
void SystemClock_Config(void);
void Error_Handler(void);

/* USART2 handle provided by CubeMX in usart.c */
extern UART_HandleTypeDef huart2;

int main(void)
{
  HAL_Init();
  SystemClock_Config();
  MX_GPIO_Init();
  MX_USART2_UART_Init();      /* make sure this is 9600 baud (see step 1B) */

  uint8_t b;
  for (;;)
  {
    /* If a byte arrives from the BLE module, send it back 1:1 */
    if (HAL_UART_Receive(&huart2, &b, 1, 5) == HAL_OK) {
      (void)HAL_UART_Transmit(&huart2, &b, 1, 50);
    }
    HAL_Delay(1);
  }
}

/* ==== Minimal error handler (leave as-is) ==== */
void Error_Handler(void)
{
  __disable_irq();
  while (1) { }
}

